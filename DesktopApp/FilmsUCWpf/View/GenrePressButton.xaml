<UserControl x:Class="FilmsUCWpf.View.GenrePressButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilmsUCWpf.View"
             mc:Ignorable="d">
    <Grid Height="Auto" Width="Auto" Margin="3">
        <ToggleButton x:Name="button" Content="{Binding Name}"
                      IsChecked="True" Style="{StaticResource RoundedRequestButton}">
            <ToggleButton.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </ToggleButton.Resources>
        </ToggleButton>
    </Grid>
</UserControl>
