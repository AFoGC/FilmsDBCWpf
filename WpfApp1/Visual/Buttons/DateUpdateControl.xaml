             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Visual.Buttons"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="60">
    <Grid Height="20" Width="60">
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Label HorizontalAlignment="Left" Content="." VerticalAlignment="Top" Width="5" BorderBrush="{x:Null}" Height="16" BorderThickness="1" Padding="0, 4, -100, 0" Margin="13,0,0,0" Background="{x:Null}"/>
