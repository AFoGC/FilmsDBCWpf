<UserControl x:Class="CustomButtons.GenrePressButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomButtons"
             mc:Ignorable="d">
    <Grid Height="20" Width="131" Margin="1">
        <ToggleButton x:Name="button" Content="{Binding Name}" IsChecked="True" Style="{StaticResource RequestToggleButton}"/>
    </Grid>
</UserControl>
