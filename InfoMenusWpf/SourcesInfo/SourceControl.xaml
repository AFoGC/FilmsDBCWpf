<UserControl x:Class="InfoMenusWpf.SourcesInfo.SourceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfoMenusWpf.SourcesInfo"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="400">
    <Grid>
        <TextBox x:Name="textBox_name" HorizontalAlignment="Left" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="20" Background="#FF353535" Foreground="WhiteSmoke"/>
        <TextBox x:Name="textBox_url" HorizontalAlignment="Left" Margin="100,0,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Center" Width="250" Height="20" Background="#FF353535" Foreground="WhiteSmoke"/>
        <Button Content="А" HorizontalAlignment="Left" Margin="361,0,0,0" VerticalAlignment="Center" Height="20" Width="20" Background="#FF400000" Foreground="WhiteSmoke" BorderBrush="#FF400000" Click="Button_Click"/>

    </Grid>
</UserControl>
