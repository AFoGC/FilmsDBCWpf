<UserControl x:Class="UpdaterManager.Views.UpdaterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UpdaterManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800" Background="White">
    <Grid>
        <TextBox x:Name="updaterPath" HorizontalAlignment="Left" Height="22" Margin="130,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="660" PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown"/>
        <Label Content="Updater Path:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,6,0,0"/>
        <TextBox x:Name="VersionText" IsReadOnly="True" Height="23" TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="130,0,470,137"/>
        <Label Content="Version" HorizontalAlignment="Left" Margin="10,0,0,137" VerticalAlignment="Bottom"/>
        <Button Content="Add New Updater Update" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="180" Margin="0,0,10,137" Click="Button_Click" Height="23"/>

    </Grid>
</UserControl>
