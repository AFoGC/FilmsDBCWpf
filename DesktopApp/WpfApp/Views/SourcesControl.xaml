<UserControl x:Class="WpfApp.Views.SourcesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Views"
             mc:Ignorable="d">
    <Grid Height="90" Width="286">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Style="{StaticResource BlueButton}" Content="{DynamicResource add_source_btn}" Height="20" Width="85" HorizontalAlignment="Left" Click="Button_Click" />
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="SourcesPanel"/>
        </ScrollViewer>
    </Grid>
</UserControl>
