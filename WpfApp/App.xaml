<Application x:Class="WpfApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp.Views" Startup="Application_Startup"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Dictionaries/ButtonDictionary.xaml"/>
                <ResourceDictionary Source="Resources/Dictionaries/ImagesDictionary.xaml"/>
                <ResourceDictionary Source="Resources/Dictionaries/ScrollBarDictionary.xaml"/>
                <ResourceDictionary Source="Resources/Dictionaries/TextBoxDictionary.xaml"/>
                <ResourceDictionary Source="Resources/Dictionaries/ComboBoxDictionary.xaml"/>
                <ResourceDictionary Source="Resources/Localizations/lang.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
    <Application.MainWindow>
        <local:MainWindowView Visibility="Visible"></local:MainWindowView>
    </Application.MainWindow>
</Application>
