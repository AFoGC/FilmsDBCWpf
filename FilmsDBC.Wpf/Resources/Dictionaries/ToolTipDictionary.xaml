<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ToolTip x:Key="NameToolTip">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{DynamicResource name_tt}"/>
            <TextBlock Text=": "/>
            <TextBlock Text="{Binding Name}"/>
        </StackPanel>
    </ToolTip>

    <ToolTip x:Key="FilmGenreToolTip">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{DynamicResource genre_tt}"/>
            <TextBlock Text=": "/>
            <TextBlock Text="{Binding GenreText}"/>
        </StackPanel>
    </ToolTip>

    <ToolTip x:Key="BookGenreToolTip">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{DynamicResource genre_tt}"/>
            <TextBlock Text=": "/>
            <TextBlock Text="{Binding BookGenreText}"/>
        </StackPanel>
    </ToolTip>
</ResourceDictionary>