<UserControl x:Class="FilmsUCWpf.View.SourceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilmsUCWpf.View"
             mc:Ignorable="d" 
             d:DesignWidth="800">
    <Grid Height="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition MinWidth="100" MaxWidth="400"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="TextBox" BasedOn="{StaticResource Wtextbox}"/>
            <Style TargetType="Button">
                <Setter Property="Foreground" Value="WhiteSmoke"/>
                <Setter Property="Background" Value="#FF400000"/>
                <Setter Property="BorderBrush" Value="#FF400000"/>
            </Style>
        </Grid.Resources>
        <TextBox x:Name="source_name" Text="{Binding Name}"/>
        <TextBox x:Name="source_url" Text="{Binding SourceUrl}" Grid.Column="1"/>
        <Button Content="A" Grid.Column="2" Margin="10,0,0,0"/>
    </Grid>
</UserControl>
