<UserControl x:Class="WpfApp.Views.ProflieView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Views"
             mc:Ignorable="d" 
              d:DesignHeight="20" d:DesignWidth="800">
    <Grid Height="20" Width="800">
        <Grid.Resources>
            <Style TargetType="TextBox" BasedOn="{StaticResource DarkTextBox}"/>
            <Style TargetType="Button" BasedOn="{StaticResource GrayButton}"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="ProfileNameTextBox" IsReadOnly="True" Grid.Column="1"/>
        <Button x:Name="ChangeProfileButton" Content="Use This Profile" Width="134" Grid.Column="2" Click="ChangeProfileButton_Click"/>
        <Button x:Name="DeleteProfileButton" Content="Delete Profile" Width="100" HorizontalAlignment="Left" Grid.Column="3" Click="DeleteProfileButton_Click"/>

    </Grid>
</UserControl>
