<UserControl x:Class="WpfApp.Views.MarkSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Views"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="MenuLabel" Content="{DynamicResource st_mark_title}"  Foreground="White" BorderThickness="0 0 0 1" BorderBrush="#FF7A7A7A"/>
        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="1">
            <ComboBox x:Name="markPanel" Style="{StaticResource DarkComboBox}" Width="200"/>
            <Rectangle Width="5"/>
            <Button Style="{StaticResource GrayButton}" Content="{DynamicResource st_mark_btn}" Width="180" Click="ChangeMark"/>
        </StackPanel>
    </Grid>
</UserControl>
