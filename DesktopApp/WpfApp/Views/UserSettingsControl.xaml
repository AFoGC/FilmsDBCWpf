<UserControl x:Class="WpfApp.Views.UserSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="250">
    <Grid Width="250" Height="80" Background="#FF1F1F1F" x:Name="grid">
        <Grid Background="#FF1F1F1F" Panel.ZIndex="1" x:Name="user_grid" MouseDown="LogOut">
            <Label x:Name="username_label" Content="User Username" Foreground="WhiteSmoke" HorizontalAlignment="Left" Margin="10,16,0,0" VerticalAlignment="Top" MouseDown="LogOut" FontSize="24"/>
            <Label x:Name="email_label" Content="examplemail@gmail.com" Foreground="WhiteSmoke" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" MouseDown="LogOut"/>
        </Grid>
        <Grid Background="#FF1F1F1F" Panel.ZIndex="2" Name="log_grid" MouseDown="LogIn">
            <Label x:Name="Log" Content="Log In" Foreground="WhiteSmoke" HorizontalAlignment="Left" Margin="10,19,0,0" VerticalAlignment="Top" FontSize="24" MouseDown="LogIn"/>
        </Grid>
    </Grid>
</UserControl>
