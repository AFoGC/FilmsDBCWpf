             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UpdaterManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="177" d:DesignWidth="800" Background="#FFFFFFFF">
    <Grid>
        <TextBox x:Name="LauncherPathTextBox" Text="" TextWrapping="Wrap" Margin="130,13,10,141" PreviewMouseLeftButtonDown="LauncherPathTextBox_PreviewMouseLeftButtonDown"/>
