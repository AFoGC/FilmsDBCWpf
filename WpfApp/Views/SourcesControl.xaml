<UserControl x:Class="WpfApp.Views.SourcesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Views"
             mc:Ignorable="d" 
             d:DesignWidth="800">
    <Grid Height="90">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Style="{StaticResource BlueButton}" Content="Add" Height="20" Width="85" HorizontalAlignment="Left" Click="Button_Click" />
        <StackPanel x:Name="SourcesPanel" Grid.Row="1"/>
    </Grid>
</UserControl>
