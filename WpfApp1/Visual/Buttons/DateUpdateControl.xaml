        <TextBox HorizontalAlignment="Left" Text="2000" TextWrapping="Wrap" VerticalAlignment="Center" Width="28" BorderBrush="{x:Null}" Height="12" BorderThickness="1" Padding="-2,-4, -100, 0" Margin="32,0,0,0" Grid.ColumnSpan="2" Background="{x:Null}"/>

    </Grid>
