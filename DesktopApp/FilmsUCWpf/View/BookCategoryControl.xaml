<UserControl x:Class="FilmsUCWpf.View.BookCategoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilmsUCWpf.View"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d">
    <Grid Style="{DynamicResource TControl}" Height="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.ContextMenu>
            <ContextMenu StaysOpen="True" IsOpen="{Binding IsCMOpen}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Opened">
                        <i:InvokeCommandAction Command="{Binding CMOpenedCommand}"/>
                    </i:EventTrigger>
                    <i:EventTrigger EventName="Closed">
                        <i:InvokeCommandAction Command="{Binding CMClosedCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <MenuItem Header="{DynamicResource edit_category_btn}" ToolTip="{DynamicResource open_edit_tt}"
                          Command="{Binding OpenUpdateCommand}"/>

                <Separator/>
                <MenuItem Header="{DynamicResource add_selected_cm}"
                          Command="{Binding AddSelectedCommand}"/>
                
                <MenuItem Header="{DynamicResource remove_selected_cm}"
                          Command="{Binding RemoveSelectedCommand}"/>
                
                <Separator/>
                <MenuItem Header="{DynamicResource delete_category_cm}"
                          Command="{Binding DeleteCategoryCommand}"/>
            </ContextMenu>
        </Grid.ContextMenu>
        <TextBox Text="{Binding ID}" ToolTip="{DynamicResource id_tt}" Width="{DynamicResource id_width}"/>
        
        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <TextBox Text="{Binding Name}" ToolTip="{DynamicResource name_tt}" Width="{DynamicResource name_width}"/>
            <TextBox Text="{Binding Mark}" ToolTip="{DynamicResource mark_tt}" Width="{DynamicResource mark_width}"/>
            
            <Button Content="V" ToolTip="{DynamicResource collapse_category_tt}"
                    Command="{Binding CollapseCommand}"/>
            
            <Button Content="⋮" Command="{Binding OpenCMCommand}"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                    Visibility="{Binding CollectionVisiblility}">
            <ItemsControl ItemsSource="{Binding BooksVMs}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:BookInCategorySimpleControl />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button ToolTip="{DynamicResource add_in_category_tt}" HorizontalAlignment="Left" 
                    Content="+" Margin="1,1,1,5" 
                    Command="{Binding CreateBookCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
